# build environment
FROM node:13.12.0-alpine as builder
WORKDIR /app
ENV PATH /app/node_modules/.bin:$PATH
COPY NextBikeDataPresenter/package.json ./
COPY NextBikeDataPresenter/package-lock.json ./
RUN npm ci --silent
RUN npm install react-scripts@3.4.1 -g --silent
COPY NextBikeDataPresenter/ ./
RUN npm run build
CMD ["npm", "start"]
